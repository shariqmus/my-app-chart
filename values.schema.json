{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Values",
  "description": "Schema for my-app-chart values.yaml v2",
  "properties": {
    "app": {
      "type": "object",
      "description": "Application Identity (REQUIRED)",
      "properties": {
        "name": {
          "type": "string",
          "description": "Application name"
        },
        "environment": {
          "type": "string",
          "description": "Environment (dev | uat | prod)",
          "enum": ["dev", "development", "uat", "staging", "stage", "prd", "prod", "production"],
          "default": "dev"
        },
        "version": {
          "type": "string",
          "description": "Logical app version (not image tag)"
        },
        "owner": {
          "type": "string",
          "description": "Team or owner name"
        },
        "labels": {
          "type": "object",
          "description": "Additional labels",
          "additionalProperties": {
            "type": "string"
          }
        }
      },
      "required": ["name", "environment"]
    },
    "image": {
      "type": "object",
      "description": "Image & Runtime",
      "properties": {
        "repository": {
          "type": "string",
          "description": "Container image repository"
        },
        "tag": {
          "type": "string",
          "description": "Container image tag"
        },
        "pullPolicy": {
          "type": "string",
          "enum": ["Always", "IfNotPresent", "Never"],
          "default": "IfNotPresent"
        },
        "pullSecrets": {
          "type": "array",
          "description": "Image pull secrets",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              }
            },
            "required": ["name"]
          },
          "default": []
        }
      },
      "required": ["repository", "tag"]
    },
    "workload": {
      "type": "object",
      "description": "Workload (Deployment)",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["Deployment", "StatefulSet"],
          "default": "Deployment"
        },
        "replicas": {
          "type": "integer",
          "minimum": 1,
          "default": 1
        },
        "strategy": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["RollingUpdate", "Recreate"],
              "default": "RollingUpdate"
            },
            "rollingUpdate": {
              "type": "object",
              "properties": {
                "maxUnavailable": {
                  "type": ["integer", "string"],
                  "default": 0
                },
                "maxSurge": {
                  "type": ["integer", "string"],
                  "default": 1
                }
              }
            }
          }
        },
        "revisionHistoryLimit": {
          "type": "integer",
          "default": 5
        },
        "pod": {
          "type": "object",
          "properties": {
            "annotations": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              },
              "default": {}
            },
            "labels": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              },
              "default": {}
            },
            "securityContext": {
              "type": "object",
              "properties": {
                "runAsNonRoot": {
                  "type": "boolean"
                },
                "runAsUser": {
                  "type": "integer"
                },
                "fsGroup": {
                  "type": "integer"
                }
              }
            },
            "scheduling": {
              "type": "object",
              "properties": {
                "nodeSelector": {
                  "type": "object",
                  "additionalProperties": {
                    "type": "string"
                  },
                  "default": {}
                },
                "tolerations": {
                  "type": "array",
                  "items": {
                    "type": "object"
                  },
                  "default": []
                },
                "affinity": {
                  "type": "object"
                },
                "topologySpreadConstraints": {
                  "type": "array",
                  "items": {
                    "type": "object"
                  },
                  "default": []
                }
              }
            }
          }
        }
      },
      "required": ["type", "replicas"]
    },
    "containers": {
      "type": "object",
      "description": "Containers",
      "properties": {
        "main": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "default": "app"
            },
            "port": {
              "type": "integer",
              "minimum": 1,
              "maximum": 65535
            },
            "env": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "value": {
                    "type": "string"
                  },
                  "valueFrom": {
                    "type": "object"
                  }
                },
                "required": ["name"]
              },
              "default": []
            },
            "envFrom": {
              "type": "object",
              "properties": {
                "configMaps": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "default": []
                },
                "secrets": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "default": []
                }
              }
            },
            "resources": {
              "type": "object",
              "properties": {
                "requests": {
                  "type": "object",
                  "properties": {
                    "cpu": {
                      "type": "string"
                    },
                    "memory": {
                      "type": "string"
                    }
                  }
                },
                "limits": {
                  "type": "object",
                  "properties": {
                    "cpu": {
                      "type": "string"
                    },
                    "memory": {
                      "type": "string"
                    }
                  }
                }
              }
            },
            "securityContext": {
              "type": "object",
              "properties": {
                "allowPrivilegeEscalation": {
                  "type": "boolean"
                },
                "readOnlyRootFilesystem": {
                  "type": "boolean"
                },
                "capabilities": {
                  "type": "object",
                  "properties": {
                    "drop": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "add": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            },
            "probes": {
              "type": "object",
              "properties": {
                "readiness": {
                  "type": "object"
                },
                "liveness": {
                  "type": "object"
                },
                "startup": {
                  "type": "object"
                }
              }
            },
            "volumeMounts": {
              "type": "array",
              "items": {
                "type": "object"
              },
              "default": []
            }
          },
          "required": ["name", "port"]
        },
        "init": {
          "type": "array",
          "items": {
            "type": "object"
          },
          "default": []
        },
        "sidecars": {
          "type": "array",
          "items": {
            "type": "object"
          },
          "default": []
        }
      },
      "required": ["main"]
    },
    "volumes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "configMap": {
            "type": "string"
          },
          "secret": {
            "type": "string"
          },
          "emptyDir": {
            "type": "object"
          },
          "persistentVolumeClaim": {
            "type": "string"
          }
        },
        "required": ["name"]
      },
      "default": []
    },
    "persistence": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "mountPath": {
          "type": "string",
          "default": "/data"
        },
        "accessMode": {
          "type": "string",
          "enum": ["ReadWriteOnce", "ReadWriteMany", "ReadOnlyMany"],
          "default": "ReadWriteOnce"
        },
        "size": {
          "type": "string",
          "default": "8Gi"
        },
        "storageClass": {
          "type": "string",
          "default": ""
        }
      },
      "default": {
        "enabled": false
      }
    },
    "service": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "type": {
          "type": "string",
          "enum": ["ClusterIP", "NodePort", "LoadBalancer", "ExternalName"],
          "default": "ClusterIP"
        },
        "port": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535
        },
        "targetPort": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535
        },
        "annotations": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "default": {}
        }
      },
      "required": ["type", "port", "targetPort"]
    },
    "gateway": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "mode": {
          "type": "string",
          "enum": ["shared", "dedicated"],
          "default": "shared"
        },
        "sharedGateway": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "namespace": {
              "type": "string"
            }
          }
        },
        "gatewayClassName": {
          "type": "string",
          "default": "cilium"
        },
        "annotations": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "default": {}
        },
        "listeners": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "protocol": {
                "type": "string",
                "enum": ["HTTP", "HTTPS", "TLS", "TCP", "UDP"]
              },
              "port": {
                "type": "integer",
                "minimum": 1,
                "maximum": 65535
              },
              "allowedRoutes": {
                "type": "object",
                "properties": {
                  "namespaces": {
                    "type": "object",
                    "properties": {
                      "from": {
                        "type": "string",
                        "enum": ["All", "Same", "Selector"]
                      }
                    }
                  }
                }
              },
              "tls": {
                "type": "object",
                "properties": {
                  "mode": {
                    "type": "string",
                    "enum": ["Terminate", "Passthrough"]
                  },
                  "certificateRefs": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string"
                        },
                        "kind": {
                          "type": "string",
                          "default": "Secret"
                        },
                        "namespace": {
                          "type": "string"
                        }
                      },
                      "required": ["name"]
                    }
                  }
                }
              }
            },
            "required": ["name", "protocol", "port"]
          }
        },
        "httproute": {
          "type": "object",
          "properties": {
            "annotations": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            }
          }
        },
        "hostnames": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "routes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "path": {
                "type": "string"
              },
              "backendPort": {
                "type": "integer",
                "minimum": 1,
                "maximum": 65535
              },
              "weight": {
                "type": "integer",
                "minimum": 0,
                "maximum": 100,
                "default": 1
              }
            },
            "required": ["path"]
          }
        }
      },
      "required": ["enabled"]
    },
    "ingress": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "serviceAccount": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "name": {
          "type": "string",
          "default": ""
        },
        "annotations": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "default": {}
        }
      }
    },
    "rbac": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "secrets": {
      "type": "object",
      "properties": {
        "vault": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false
            },
            "authRef": {
              "type": "string",
              "default": "vault-auth"
            },
            "mount": {
              "type": "string",
              "default": "kv"
            },
            "type": {
              "type": "string",
              "default": "kv-v2"
            },
            "path": {
              "type": "string"
            },
            "destination": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "create": {
                  "type": "boolean",
                  "default": true
                }
              },
              "required": ["name"]
            }
          },
          "required": ["enabled", "path", "destination"]
        }
      }
    },
    "autoscaling": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "minReplicas": {
          "type": "integer",
          "minimum": 1,
          "default": 2
        },
        "maxReplicas": {
          "type": "integer",
          "minimum": 1,
          "default": 10
        },
        "metrics": {
          "type": "object",
          "properties": {
            "cpu": {
              "type": "integer",
              "minimum": 1,
              "maximum": 100
            },
            "memory": {
              "type": "integer",
              "minimum": 1,
              "maximum": 100
            },
            "custom": {
              "type": "array",
              "items": {
                "type": "object"
              }
            }
          }
        },
        "behavior": {
          "type": "object"
        }
      }
    },
    "podDisruptionBudget": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "minAvailable": {
          "type": ["integer", "string"]
        },
        "maxUnavailable": {
          "type": ["integer", "string"]
        }
      }
    },
    "observability": {
      "type": "object",
      "properties": {
        "metrics": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false
            },
            "path": {
              "type": "string",
              "default": "/metrics"
            },
            "interval": {
              "type": "string",
              "default": "15s"
            }
          }
        },
        "logging": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false
            }
          }
        },
        "tracing": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false
            }
          }
        }
      }
    },
    "policies": {
      "type": "object",
      "properties": {
        "production": {
          "type": "object",
          "properties": {
            "enforceMinReplicas": {
              "type": "integer",
              "minimum": 1,
              "default": 2
            },
            "forbidLatestTag": {
              "type": "boolean",
              "default": true
            },
            "requireResources": {
              "type": "boolean",
              "default": true
            },
            "requireProbes": {
              "type": "boolean",
              "default": true
            },
            "enforceSecurityContext": {
              "type": "boolean",
              "default": true
            }
          }
        }
      }
    },
    "namespace": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Namespace name (optional, defaults to app.name-environment)"
        }
      }
    }
  },
  "required": ["app", "image", "workload", "containers", "service"]
}
